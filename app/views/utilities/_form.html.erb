<body class="main" style="background-image: url(<%= asset_path 'island.jpg' %>)" >
<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row-fluid user-row">
            <img src="/app/assets/images/funabounds-login.png"/>
          </div>
        </div>
        <div class="panel-body">

<%= form_for @utility, :html => { :class => "form-horizontal utility" } do |f| %>

    <% if @utility.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@utility.errors.count, "error") %> prohibited this utility from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @utility.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :utility_name, 'Utility Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :utility_name, :class => 'form-control' %>
    </div>
    <%= error_span(@utility[:utility_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            utilities_path, :class => 'btn btn-default' %>

<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>