<%- model_class = ProjectTypeInformation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:proposal_number) %></th>
      <th><%= model_class.human_attribute_name(:revision_number) %></th>
      <th><%= model_class.human_attribute_name(:project_id) %></th>
      <th><%= model_class.human_attribute_name(:project_type_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_type_informations.each do |project_type_information| %>
      <tr>
        <td><%= link_to project_type_information.id, project_type_information_path(project_type_information) %></td>
        <td><%= project_type_information.proposal_number %></td>
        <td><%= project_type_information.revision_number %></td>
        <td><%= project_type_information.project_id %></td>
        <td><%= project_type_information.project_type_id %></td>
        <td><%=l project_type_information.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_type_information_path(project_type_information), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_type_information_path(project_type_information),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_type_information_path,
            :class => 'btn btn-primary' %>
