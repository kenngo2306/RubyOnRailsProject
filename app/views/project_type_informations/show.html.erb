<%- model_class = ProjectTypeInformation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Proposal Number:</strong></dt>
  <dd><%= @project_type_information.proposal_number %></dd>
  <dt><strong>Revision Number:</strong></dt>
  <dd><%= @project_type_information.revision_number %></dd>
  <dt><strong>Project ID:</strong></dt>
  <dd><%= @project_type_information.project_id %></dd>
  <dt><strong>Project Type ID:</strong></dt>
  <dd><%= @project_type_information.project_type_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              project_type_informations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_type_information_path(@project_type_information), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_type_information_path(@project_type_information),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<%= simple_form_for(@project_type_information)do |f| %>



    <div class="control-group">
      <% Category.where('project_type_id = ?',@project_type_information.project_type_id).each do |category| %>

          <h3> <%= category.category_name %> </h3> <br/>
          <% category.category_options.each do |category_option|  %>

              <%= check_box_tag "project_type_information[category_option_ids][]", category_option.id, @project_type_information.category_option_ids.include?(category_option.id) %>
              <%= label_tag(category_option.category_option_name + '_' + category_option.id.to_s, category_option.category_option_name) %>
              <br/>

          <% end %>


      <% end %>
    </div>

    <div class="control-group">
      <% Question.where('project_type_id = ?',@project_type_information.project_type_id).each do |question| %>
          <h3><%= question.question_name %></h3>
          <%= hidden_field_tag "[question_ids][]", question.id %>
          <%= text_area_tag "[answer_texts][]", Answer.where('project_type_information_id = ? and question_id = ?',@project_type_information.id, question.id).any? ? Answer.where('project_type_information_id = ? and question_id = ?',@project_type_information.id, question.id).first.answer_text : "" %>

      <% end %>
    </div>

    <%= f.button :submit %>

<% end %>

