<%- model_class = ProjectTypeInformation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Proposal Number:</strong></dt>
  <dd><%= @project_type_information.proposal_number %></dd>
  <dt><strong>Revision Number:</strong></dt>
  <dd><%= @project_type_information.revision_number %></dd>
  <dt><strong>Project ID:</strong></dt>
  <dd><%= @project_type_information.project_id %></dd>
  <dt><strong>Project Type ID:</strong></dt>
  <dd><%= @project_type_information.project_type_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              project_type_informations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_type_information_path(@project_type_information), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_type_information_path(@project_type_information),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%= link_to "Enter Project Type Specification", {:controller => "project_type_specifications", :action => "new", :project_type_information_id => @project_type_information.id }%>
