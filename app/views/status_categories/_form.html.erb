<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row-fluid user-row">
            <img src="/app/assets/images/funabounds-login.png"/>
          </div>
        </div>
        <div class="panel-body">
          <%= form_for @status_category, :html => { :class => 'form-horizontal' } do |f| %>
              <div class="control-group">
                <%= f.label :status_category_name, 'Status Category Name', :class => 'control-label' %>

                <div class="controls">
                  <%= f.text_field :status_category_name, :class => 'form-control' %>
                </div>
                <%= error_span(@status_category[:status_category_name]) %>
              </div>

              <%= f.submit nil, :class => 'btn btn-primary' %>
              <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                status_categories_path, :class => 'btn btn-default' %>
<% end %>
        </div>
      </div>
    </div>
  </div>
</div>