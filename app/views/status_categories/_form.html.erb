<%= simple_form_for @status_category, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :status_category_name %>
  <%= error_span(@status_category[:status_category_name]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                status_categories_path, :class => 'btn btn-default' %>
<% end %>
