<%- model_class = ProjectSite -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:site_name) %>:</strong></dt>
  <dd><%= @project_site.site_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_address) %>:</strong></dt>
  <dd><%= @project_site.site_address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_city) %>:</strong></dt>
  <dd><%= @project_site.site_city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_zip) %>:</strong></dt>
  <dd><%= @project_site.site_zip %></dd>
  <dt><strong><%= model_class.human_attribute_name(:site_access) %>:</strong></dt>
  <dd><%= @project_site.site_access %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state_id) %>:</strong></dt>
  <dd><%= @project_site.state_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              project_sites_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_site_path(@project_site), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_site_path(@project_site),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
