<body class="main" style="background-image: url(<%= asset_path 'island.jpg' %>)" >
<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row-fluid user-row">
            <img src="/app/assets/images/funabounds-login.png"/>
          </div>
        </div>
        <div class="panel-body">


<%= form_for @procurement_tool, :html => { :class => "form-horizontal procurement_tool" } do |f| %>

    <% if @procurement_tool.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@procurement_tool.errors.count, "error") %> prohibited this procurement_tool from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @procurement_tool.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :procurement_tool_name, 'Procurement Tool Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :procurement_tool_name, :class => 'form-control' %>
    </div>
    <%= error_span(@procurement_tool[:procurement_tool_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            procurement_tools_path, :class => 'btn btn-default' %>

<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>