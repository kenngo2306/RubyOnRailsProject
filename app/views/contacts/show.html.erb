<%- model_class = Contact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Client Name:</strong></dt>
  <dd><%= @contact.client.client_name %></dd>
  <dt><strong>Contact Type:</strong></dt>
  <dd><%= @contact.contact_type.contact_type_name %></dd>
  <dt><strong>First Name:</strong></dt>
  <dd><%= @contact.contact_first_name %></dd>
  <dt><strong>Last Name:</strong></dt>
  <dd><%= @contact.contact_last_name %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @contact.contact_email %></dd>
  <dt><strong>Cell:</strong></dt>
  <dd><%= @contact.contact_cell %></dd>
  <dt><strong>Work:</strong></dt>
  <dd><%= @contact.contact_work %></dd>
  <dt><strong>Address:</strong></dt>
  <dd><%= @contact.contact_address %></dd>
  <dt><strong>City:</strong></dt>
  <dd><%= @contact.contact_city %></dd>
  <dt><strong>Zip:</strong></dt>
  <dd><%= @contact.contact_zip %></dd>
  <dt><strong>State:</strong></dt>
  <dd><%= @contact.state.state_name %></dd>
  <dt><strong>Client:</strong></dt>
  <dd><%=@contact.client.client_name %></dd>
  <dt><strong>Contact Type:</strong></dt>
  <dd><%= @contact.contact_type.contact_type_name %></dd>


</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              contacts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_contact_path(@contact), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              contact_path(@contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
