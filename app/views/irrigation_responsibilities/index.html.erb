<%- model_class = IrrigationResponsibility -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:irrigation_responsibility_name) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @irrigation_responsibilities.each do |irrigation_responsibility| %>
      <tr>
        <td><%= link_to irrigation_responsibility.id, irrigation_responsibility_path(irrigation_responsibility) %></td>
        <td><%= irrigation_responsibility.irrigation_responsibility_name %></td>
        <td><%=l irrigation_responsibility.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_irrigation_responsibility_path(irrigation_responsibility), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      irrigation_responsibility_path(irrigation_responsibility),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_irrigation_responsibility_path,
            :class => 'btn btn-primary' %>
