<%- model_class = RequestedSalesDocument -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Requested Sales Document Name:</strong></dt>
  <dd><%= @requested_sales_document.requested_sales_document_name %></dd>
</dl>

<div class = "showPageButton">
<%= link_to t('.back', :default => t("helpers.links.back")),
              requested_sales_documents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_requested_sales_document_path(@requested_sales_document), :class => 'fa fa-edit fa-2 btn btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              requested_sales_document_path(@requested_sales_document),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>