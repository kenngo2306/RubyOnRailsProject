<%= form_for @sales_person, :html => { :class => "form-horizontal sales_person" } do |f| %>

    <% if @sales_person.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sales_person.errors.count, "error") %> prohibited this sales_person from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sales_person.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :sales_person_first_name, 'First Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sales_person_first_name, :class => 'form-control' %>
    </div>
    <%= error_span(@sales_person[:sales_person_first_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :sales_person_last_name, 'Last Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sales_person_last_name, :class => 'form-control' %>
    </div>
    <%= error_span(@sales_person[:sales_person_last_name]) %>
  </div>
  <div class="control-group">
    <%= f.label :sales_person_email, 'Email', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sales_person_email, :class => 'form-control' %>
    </div>
    <%= error_span(@sales_person[:sales_person_email]) %>
  </div>
  <div class="control-group">
    <%= f.label :sales_person_phone, 'Phone Number', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sales_person_phone, :class => 'form-control' %>
    </div>
    <%= error_span(@sales_person[:sales_person_phone]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            sales_people_path, :class => 'btn btn-default' %>

<% end %>
