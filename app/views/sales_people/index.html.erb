<%- model_class = SalesPerson -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:sales_person_first_name) %></th>
      <th><%= model_class.human_attribute_name(:sales_person_last_name) %></th>
      <th><%= model_class.human_attribute_name(:sales_person_email) %></th>
      <th><%= model_class.human_attribute_name(:sales_person_phone) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sales_people.each do |sales_person| %>
      <tr>
        <td><%= link_to sales_person.id, sales_person_path(sales_person) %></td>
        <td><%= sales_person.sales_person_first_name %></td>
        <td><%= sales_person.sales_person_last_name %></td>
        <td><%= sales_person.sales_person_email %></td>
        <td><%= sales_person.sales_person_phone %></td>
        <td><%=l sales_person.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sales_person_path(sales_person), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sales_person_path(sales_person),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sales_person_path,
            :class => 'btn btn-primary' %>
