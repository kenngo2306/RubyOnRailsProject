<%- model_class = ProjectContact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Project Name</th>
      <th>Contact Name</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_contacts.each do |project_contact| %>
      <tr>
        <td><%= link_to project_contact.id, project_contact_path(project_contact) %></td>
        <td><%= project_contact.project_id %></td>
        <td><%= project_contact.contact_id %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      project_contact, :class => 'btn btn-default btn-xs'  %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_contact_path(project_contact), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_contact_path(project_contact),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_contact_path,
            :class => 'btn btn-primary' %>
