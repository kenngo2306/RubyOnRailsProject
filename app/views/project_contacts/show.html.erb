<%- model_class = ProjectContact -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Project Name:</strong></dt>
  <dd><%= @project_contact.project.project_name %></dd>
  <dt><strong>Contact Name:</strong></dt>
  <dd><%= @project_contact.contact.full_contact_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              project_contacts_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_contact_path(@project_contact), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_contact_path(@project_contact),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
