<%= form_for @project_contact, :html => { :class => "form-horizontal project_contact" } do |f| %>

    <% if @project_contact.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@project_contact.errors.count, "error") %> prohibited this project_contact from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @project_contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :project_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :project_id, :class => 'form-control' %>
    </div>
    <%= error_span(@project_contact[:project_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :contact_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_id, :class => 'form-control' %>
    </div>
    <%= error_span(@project_contact[:contact_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            project_contacts_path, :class => 'btn btn-default' %>

<% end %>
