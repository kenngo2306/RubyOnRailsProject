<%= form_for @answer, :html => { :class => "form-horizontal answer" } do |f| %>

    <% if @answer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @answer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :answer_text, 'Answer Text', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :answer_text, :class => 'form-control' %>
    </div>
    <%= error_span(@answer[:answer_text]) %>
  </div>
  <div class="control-group">
    <%= f.label :question_id, 'Question', :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :question_id, Question.all, :id, :question_name, :class => 'form-control' %>
    </div>
    <%= error_span(@answer[:question_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :project_type_information_id, 'Project Type Information', :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :project_type_information_id, ProjectTypeInformation.all, :id, :class => 'form-control' %>
    </div>
    <%= error_span(@answer[:project_type_information_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            answers_path, :class => 'btn btn-default' %>

<% end %>
