<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-10 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row-fluid user-row">
            <img src="/app/assets/images/funabounds-login.png"/>
          </div>
        </div>
        <div class="panel-body">


<%= form_for @contact_type, :html => { :class => "form-horizontal contact_type" } do |f| %>

    <% if @contact_type.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@contact_type.errors.count, "error") %> prohibited this contact_type from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @contact_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :contact_type_name, 'Contact Type Name', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_type_name, :class => 'form-control' %>
    </div>
    <%= error_span(@contact_type[:contact_type_name]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            contact_types_path, :class => 'btn btn-default' %>

<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>