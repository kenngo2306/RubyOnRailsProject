<%- model_class = Installer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped DataTables">
  <thead>
    <tr>
      <th>ID</th>
      <th>Installer First Name</th>
      <th>Installer Last Name</th>
      <th>Installer Email</th>
      <th>Installer Phone</th>
      <th>User ID</th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @installers.each do |installer| %>
      <tr>
        <td><%= link_to installer.id, installer_path(installer) %></td>
        <td><%= installer.installer_first_name %></td>
        <td><%= installer.installer_last_name %></td>
        <td><%= installer.installer_email %></td>
        <td><%= installer.installer_phone %></td>
        <td><%= installer.user_id %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_installer_path(installer), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      installer_path(installer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_installer_path,
            :class => 'btn btn-primary' %>
