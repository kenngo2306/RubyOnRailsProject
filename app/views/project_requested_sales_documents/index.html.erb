<%- model_class = ProjectRequestedSalesDocument -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped DataTables">
  <thead>
    <tr>
      <th>ID</th>
      <th>Project Name</th>
      <th>Requested Sales Document Name</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_requested_sales_documents.each do |project_requested_sales_document| %>
      <tr>
        <td><%= link_to project_requested_sales_document.id, project_requested_sales_document_path(project_requested_sales_document) %></td>
        <td><%= project_requested_sales_document.project.project_name %></td>
        <td><%= project_requested_sales_document.requested_sales_document.requested_sales_document_name %></td>
        <td><%=l project_requested_sales_document.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_requested_sales_document_path(project_requested_sales_document), :class => ' btn-default btn-sm' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_requested_sales_document_path(project_requested_sales_document),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => ' btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_requested_sales_document_path,
            :class => 'btn btn-primary btn-index' %>
