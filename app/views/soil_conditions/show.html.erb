<%- model_class = SoilCondition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:soil_condition_name) %>:</strong></dt>
  <dd><%= @soil_condition.soil_condition_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              soil_conditions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_soil_condition_path(@soil_condition), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              soil_condition_path(@soil_condition),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
