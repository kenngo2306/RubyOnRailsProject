<%- model_class = ProjectStatus -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Project Status Name:</strong></dt>
  <dd><%= @project_status.project_status_name %></dd>
</dl>
<dl class="dl-horizontal">
  <dt><strong>Status Category Name:</strong></dt>
  <dd><%= @project_status.status_category.status_category_name %></dd>
</dl>


<div class = "showPageButton">
<%= link_to t('.back', :default => t("helpers.links.back")),
              project_statuses_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_status_path(@project_status), :class => 'fa fa-edit fa-2 btn btn-default' %>

</div>