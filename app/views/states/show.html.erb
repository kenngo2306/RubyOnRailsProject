<%- model_class = State -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>State Name:</strong></dt>
  <dd><%= @state.state_name %></dd>
  <dt><strong>State Abbreviation:</strong></dt>
  <dd><%= @state.state_abbreviation %></dd>
</dl>

<div class = "showPageButton">
<%= link_to t('.back', :default => t("helpers.links.back")),
              states_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_state_path(@state), :class => 'fa fa-edit fa-2 btn btn-default' %>

</div>