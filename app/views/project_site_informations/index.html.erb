<%- model_class = ProjectSiteInformation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:area_length) %></th>
      <th><%= model_class.human_attribute_name(:area_width) %></th>
      <th><%= model_class.human_attribute_name(:area_description) %></th>
      <th><%= model_class.human_attribute_name(:geotech_report_in_position) %></th>
      <th><%= model_class.human_attribute_name(:bobcat_accessible) %></th>
      <th><%= model_class.human_attribute_name(:construction_fence_required) %></th>
      <th><%= model_class.human_attribute_name(:client_fence_dismantle_reinstall_required) %></th>
      <th><%= model_class.human_attribute_name(:rock_excavation_required) %></th>
      <th><%= model_class.human_attribute_name(:hand_dig_required) %></th>
      <th><%= model_class.human_attribute_name(:dirt_haul_off_required) %></th>
      <th><%= model_class.human_attribute_name(:tree_vegetation_removal_required) %></th>
      <th><%= model_class.human_attribute_name(:area_is_sloped) %></th>
      <th><%= model_class.human_attribute_name(:site_survey_required) %></th>
      <th><%= model_class.human_attribute_name(:surface_protection_required) %></th>
      <th><%= model_class.human_attribute_name(:under_ground_obstacles_yn) %></th>
      <th><%= model_class.human_attribute_name(:structural_removal_required) %></th>
      <th><%= model_class.human_attribute_name(:pvt_locator_required) %></th>
      <th><%= model_class.human_attribute_name(:project_type_information_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @project_site_informations.each do |project_site_information| %>
      <tr>
        <td><%= link_to project_site_information.id, project_site_information_path(project_site_information) %></td>
        <td><%= project_site_information.area_length %></td>
        <td><%= project_site_information.area_width %></td>
        <td><%= project_site_information.area_description %></td>
        <td><%= project_site_information.geotech_report_in_position %></td>
        <td><%= project_site_information.bobcat_accessible %></td>
        <td><%= project_site_information.construction_fence_required %></td>
        <td><%= project_site_information.client_fence_dismantle_reinstall_required %></td>
        <td><%= project_site_information.rock_excavation_required %></td>
        <td><%= project_site_information.hand_dig_required %></td>
        <td><%= project_site_information.dirt_haul_off_required %></td>
        <td><%= project_site_information.tree_vegetation_removal_required %></td>
        <td><%= project_site_information.area_is_sloped %></td>
        <td><%= project_site_information.site_survey_required %></td>
        <td><%= project_site_information.surface_protection_required %></td>
        <td><%= project_site_information.under_ground_obstacles_yn %></td>
        <td><%= project_site_information.structural_removal_required %></td>
        <td><%= project_site_information.pvt_locator_required %></td>
        <td><%= project_site_information.project_type_information_id %></td>
        <td><%=l project_site_information.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_project_site_information_path(project_site_information), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      project_site_information_path(project_site_information),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_project_site_information_path,
            :class => 'btn btn-primary' %>
