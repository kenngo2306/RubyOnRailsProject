<%- model_class = DealType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class ="table-responsive">
<table class="table table-striped DataTables">
  <thead>
    <tr>
      <th> ID</th>
      <th> Deal Type Name </th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @deal_types.each do |deal_type| %>
      <tr>
        <td><%= link_to deal_type.id, deal_type_path(deal_type) %></td>
        <td><%= deal_type.deal_type_name %></td>

        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_deal_type_path(deal_type), :class => 'fa fa-edit fa-2 btn btn-default btn-sm' %>

        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_deal_type_path,
            :class => 'btn btn-primary btn-index' %>
