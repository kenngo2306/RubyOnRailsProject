<body class="main">
<div class="container">
  <div class="row vertical-offset-100">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="row-fluid user-row">
            <div>
              <img class = "whale" src="<%= asset_path( 'whale_logo.png' ) %>" /></div>
            <span class ="whaleTitle">Web Hosted Application Leigh Enjoys</span>
          </div>
        </div>
        <div class="panel-body">
<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, :class => 'login-label' %><br />
    <%= f.email_field :email, autofocus: true,  :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Resend Unlock Instructions", :class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
</body>